<Page x:Class="Keesh.Interface.User.NavigationPage.ProtoType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Keesh.Interface.User.NavigationPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Keesh: Prototype">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Margin="3,6" VerticalAlignment="Bottom">Alpha Vantage API Key: </TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Margin="0,3" Text="{Binding Path=Key}"/>
        <Button Grid.Column="2" Grid.Row="0" Padding="12,3" Margin="12,3" Click="SaveButton_Click">_Save</Button>
    </Grid>
</Page>
